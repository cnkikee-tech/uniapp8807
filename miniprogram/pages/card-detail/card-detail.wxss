/* pages/card-detail/card-detail.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 名片头部 */
.card-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  color: #fff;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.3);
}

.avatar-wrapper {
  margin-right: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.basic-info {
  flex: 1;
}

.name {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.position {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 4rpx;
}

.company {
  display: block;
  font-size: 24rpx;
  opacity: 0.8;
}

/* 名片详情 */
.card-details {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.detail-section {
  margin-bottom: 30rpx;
}

.detail-section:last-child {
  margin-bottom: 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.detail-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
}

.detail-item:last-child {
  margin-bottom: 0;
  border-bottom: none;
}

.detail-label {
  width: 120rpx;
  font-size: 26rpx;
  color: #666;
  flex-shrink: 0;
}

.detail-value {
  flex: 1;
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
}

.phone,
.email,
.website,
.address-value {
  color: #667eea;
  text-decoration: underline;
}

.description {
  background-color: #f8f9fa;
  padding: 20rpx;
  border-radius: 12rpx;
  line-height: 1.6;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.action-btn {
  flex: 1;
  padding: 24rpx 20rpx;
  border-radius: 16rpx;
  border: none;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  transition: all 0.2s ease;
}

.action-btn:active {
  transform: scale(0.95);
}

.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

.secondary {
  background-color: #f8f9fa;
  color: #495057;
  border: 2rpx solid #e9ecef;
}

.tertiary {
  background-color: #fff;
  color: #667eea;
  border: 2rpx solid #667eea;
}

.btn-icon {
  font-size: 32rpx;
}

.btn-text {
  font-size: 22rpx;
}

/* 统计信息 */
.stats-info {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-around;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.stat-item {
  text-align: center;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.stat-value {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-content {
  background-color: #fff;
  padding: 40rpx 60rpx;
  border-radius: 20rpx;
  text-align: center;
}

.loading-content text {
  font-size: 28rpx;
  color: #333;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .card-header {
    padding: 30rpx;
  }
  
  .avatar {
    width: 100rpx;
    height: 100rpx;
  }
  
  .name {
    font-size: 36rpx;
  }
  
  .action-buttons {
    flex-direction: column;
  }
  
  .action-btn {
    flex-direction: row;
    justify-content: center;
  }
}