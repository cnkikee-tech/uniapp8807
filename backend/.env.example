# 应用配置
APP_DEBUG = true
APP_TRACE = false

# 数据库配置
DATABASE_TYPE = mysql
DATABASE_HOSTNAME = 127.0.0.1
DATABASE_DATABASE = business_card_system
DATABASE_USERNAME = root
DATABASE_PASSWORD = 
DATABASE_HOSTPORT = 3306
DATABASE_CHARSET = utf8mb4
DATABASE_PREFIX = 

# JWT配置
JWT_SECRET = your-secret-key-here
JWT_EXPIRE = 7200
JWT_REFRESH_EXPIRE = 604800
JWT_ALGORITHM = HS256
JWT_ISSUER = business-card-system
JWT_AUDIENCE = business-card-users
JWT_SUBJECT = business-card-auth

# 缓存配置
CACHE_TYPE = file
CACHE_PREFIX = business_card
CACHE_EXPIRE = 3600

# 文件上传配置
UPLOAD_PATH = uploads
UPLOAD_MAX_SIZE = 2097152
UPLOAD_ALLOW_EXT = jpg,jpeg,png,gif

# 跨域配置
CORS_ALLOW_ORIGIN = *
CORS_ALLOW_METHODS = GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS = Content-Type,Authorization,X-Requested-With

# 日志配置
LOG_LEVEL = debug
LOG_PATH = runtime/log
LOG_MAX_FILES = 30

# 系统配置
SITE_NAME = 智能名片系统
SITE_LOGO = /static/logo.png
CARDS_PER_PAGE = 10